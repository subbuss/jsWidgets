// From http://sedition.com/perl/javascript-fy.html
function fisherYates (myArray) {
  var i = myArray.length-1; // Last element of the stories array is a dummy element -- so ignore it!
  if (i == 0) return false;
  while (--i) {
     var j = Math.floor( Math.random() * (i + 1) );
     var tempi = myArray[i];
     var tempj = myArray[j];
     myArray[i] = tempj;
     myArray[j] = tempi;
   }
}
// Randomize the array!
fisherYates(_nr_stories);
